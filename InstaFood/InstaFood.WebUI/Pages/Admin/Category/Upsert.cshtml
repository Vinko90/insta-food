@page
@model InstaFood.WebUI.UpsertModel
@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-page="./Index">Category</a></li>
                    <li class="breadcrumb-item active">@(Model.CategoryObj.Id != 0 ? "Update" : "Create") Category</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">@(Model.CategoryObj.Id != 0 ? "Update" : "Create") Category</h3>
                    </div>
                    <form role="form" method="post" asp-action="Upsert">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @if (Model.CategoryObj.Id != 0)
                            {
                                <input type="hidden" asp-for="CategoryObj.Id" />
                            }
                            <div class="form-group">
                                <label asp-for="CategoryObj.Name"></label>
                                <input class="form-control" asp-for="CategoryObj.Name">
                                <span class="text-danger" asp-validation-for="CategoryObj.Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryObj.DisplayOrder"></label>
                                <input class="form-control" asp-for="CategoryObj.DisplayOrder">
                                <span class="text-danger" asp-validation-for="CategoryObj.DisplayOrder"></span>
                            </div>  
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">

                            <a asp-page="./Index" class="btn btn-primary">Back to List</a>

                            @if (Model.CategoryObj.Id != 0)
                            {
                                <button type="submit" class="btn btn-info">Update</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success">Create</button>
                            }

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
